{
    "Statement": [
      {
        "Effect": "Allow",
        "Action": ["s3:GetObject"],
        "Resource": ["${var.primary_bucket_arn}/*"],
        "Principal": {
          "Service": "cloudfront.amazonaws.com"
        },
        "Condition": {
          "StringEquals": {
            "AWS:SourceArn": [ "${var.cloudfront_arn}" ]
          }
        }
      }
    ]
}

